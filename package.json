{
  "name": "project_1",
  "version": "1.0.0",
  "description": "Task Management Web Application with automated testing",
  "homepage": "https://github.com/jafarnz/devops-taskboard#readme",
  "bugs": {
    "url": "https://github.com/jafarnz/devops-taskboard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jafarnz/devops-taskboard.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "npm run test-backend && npm run test-api",
    "test-backend": "jest --config jest.config.js --testPathPattern=tests/backend --coverage --coverageDirectory=coverage/backend",
    "test-api": "jest --config jest.config.js --testPathPattern=tests/api --coverage --coverageDirectory=coverage/backend",
    "test-frontend": "npx playwright test",
    "test-frontend:coverage": "npx playwright test && node generate-coverage.js",
    "test-all": "npm run test-backend && npm run test-api && npm run test-frontend",
    "coverage-check": "node generate-coverage.js",
    "playwright:install": "npx playwright install chromium"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  }
}